<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.repository.MemberMapper">
	<select id="selectAll" resultType="member">
		select * from userinfo
	</select>
	
	<select id="selectByNmae" resultType="member" parameterType="String">
		select * from userinfo where id like #{name}
	</select>
	
		<select id="selectByPhone" resultType="member" parameterType="String">
		select * from userinfo where phone=#{phone}
	</select>
	
	<select id="selectById" resultType="member" parameterType="String">
		select * from userinfo where id=#{id}
	</select>
	
	<insert id="insertMember" parameterType="member">
		insert into userinfo(id, password, name, address, phone) values(#{id}, #{password}, #{name}, #{address}, #{phone})
	</insert>
	
	<update id="updateMember" parameterType="member">
		update userinfo set password=#{password}, name=#{name}, address=#{address}, phone=#{phone} where id=#{id}
	</update>
	
	<delete id="deleteMember" parameterType="String">
		delete form userinfo where id=#{id}
	</delete>
	

</mapper>